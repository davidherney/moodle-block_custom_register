{{!
    @template block_custom_register/main

    This template renders the template content area for a resource.

    Example context (json):
    { blockid: string }
}}

<div id="{{blockid}}" class="customregister-box">
    <form autocomplete="off">
    {{{content}}}
        <div class="col-12">
            <div data-control="errors-box" style="text-align: center;"></div>
            <button type="button" class="btn btn-primary btn-lg btn-block" data-action="save">{{#str}}save, block_custom_register{{/str}}</button>
        </div>
    </form>
    <div class="aftermessage" style="display: none;">{{{aftermessage}}}</div>
</div>

