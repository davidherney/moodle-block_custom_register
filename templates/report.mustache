{{!
    @template block_custom_register/report

    This template renders the template content area for a resource.

    Example context (json):
    {
        "id": 1,
        "courseid": 1,
        "fields": ["id", "name", "email"],
        "records": [
            {
                "id": 1,
                "name": "John Doe",
                "email": "
            },
    }
}}

<h3>Total de registros: {{total}}</h3>

<p class="custom_register-filter-box">
    <form method="post" action="{{baseurl}}/blocks/custom_register/report.php">
        <input type="text" name="q" value="{{query}}" />
        <button>{{#pix}}i/search, core{{/pix}}</button>
        <input type="hidden" name="id" value="{{id}}" />
        <input type="hidden" name="courseid" value="{{courseid}}" />
    </form>
</p>
<table class="records generaltable">
    <tr>
        {{#fields}}
            <th>
                {{.}}
            </th>
        {{/fields}}
    </tr>
    {{#records}}
    <tr>
        {{#values}}
            <td>
                {{.}}
            </td>
        {{/values}}
    </tr>
    {{/records}}
</table>
